<!DOCTYPE html>
@using CodeWeb.Models;
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Tiêm chủng online</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Content/assets/img/logo.svg" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Add other vendor CSS files as needed -->
    <!-- Template Main CSS File -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet">
    @{
        KhachHang kh = Session["KH"] as KhachHang;
    }

</head>

<body>



    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <a href="@Url.Action("Index","Home")" class="logo me-auto"><img src="~/Images/Logo/logovc.svg" alt="" class="img-fluid"></a>


            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto active" href="@Url.Action("Index","Home")">Trang chủ</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("ShowVaccine","Sanpham")">Danh sách Vaccine</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("Contact","Home")">Liên hệ</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("LiDoTiemVC","Home")">Tin tức</a></li>
                    <li>
                        @Html.Partial("_Search")
                    </li>
                    <li class="user-dropdown nav-link scrollto">
                        @if (kh != null)
                        {
                            <div class="user-profile">
                                <img src="~/images/KhachHang/img/icon/user.svg" width="21" height="21" alt="">
                                <div class="user-details">
                                    <span class="username">@kh.HoTenKH</span>
                                    <span class="user"> <a href="@Url.Action("DanhSachDonHang", "Cart", new { idKH=kh.MaKH })">Danh Sách Đơn Hàng</a></span>
                                    <span class="logout"><a href="@Url.Action("DangXuat", "Home")">Đăng Xuất</a></span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="default-icon">
                                <a href="@Url.Action("DangNhap","Auth")">
                                    <img src="~/images/KhachHang/img/icon/user.svg" width="21" height="21" alt="">
                                </a>
                            </div>
                        }
                    </li>
                    <li>
                        @if (kh == null)
                        {
                            <a href="/Auth/DangNhap"><img src="~/Images/KhachHang/img/icon/shop_.svg" width="23" height="23" alt=""></a>}
                        @if (kh != null)
                        {
                            @Html.Action("GioHangPartial", "Cart")
                        }
                    </li>

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->
    <div class="container body-content">
        <div style="height:100px"> </div>

        @RenderBody()

        <footer id="footer">

            <div class="footer-top">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-3 col-md-6 footer-contact">
                            <h3>Đăng ký tiêm chủng online</h3>
                            <p>
                                <strong>Số điện thoại:</strong> 0901526364<br>
                                <strong>Email:</strong> cskh@gmail.com<br>
                            </p>
                        </div>

                        <div class="col-lg-2 col-md-6 footer-links">
                            <h4>Các liên kết hữu ích</h4>
                            <ul>
                                <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Về chúng tôi</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Dịch vụ</a></li>
                            </ul>
                        </div>

                        <div class="col-lg-4 col-md-6 footer-newsletter">
                            <h4>Bảng tin tức</h4>
                            <p>Thông tin liên quan về cách tiêm chủng vaccine</p>

                        </div>

                    </div>
                </div>
            </div>

            <div class="container d-md-flex py-4">

                <div class="me-md-auto text-center text-md-start">
                    <div class="copyright">
                        &copy; Nhóm thực hiện <strong><span>Web tiêm chủng Vaccine</span></strong>.
                    </div>
                    <div class="credits">
                        Thiết kế bở <b>Nhóm phát triển web</b>
                    </div>
                </div>
                <div class="social-links text-center text-md-right pt-3 pt-md-0">
                    <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                    <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>

                </div>
            </div>
        </footer><!-- End Footer -->
        <!-- Chat Bot -->
        <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
        <df-messenger intent="WELCOME"
                      chat-title="ChatBot"
                      agent-id="91273be8-9541-49a2-a066-fc8f1b560b36"
                      language-code="en"></df-messenger>
    </div>
    <!-- ======= Footer ======= -->


    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="fas fa-arrow-up"></i></a>

    <!-- Vendor JS Files -->

    <script src="~/Content/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Content/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/Content/assets/vendor/php-email-form/validate.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Template Main JS File -->
    <script src="~/Content/assets/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>

</html>